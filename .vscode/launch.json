            "cwd": "${workspaceRoot}/bin/",
        },
        {
            "name": "Debug MAGO",
            "type": "gdb",
            "request": "launch",
            
            "target": "${workspaceRoot}/bin/skeletal_animation.exe",
            "symbolSearchPath": "${workspaceRoot}/bin/",
            "cwd": "${workspaceRoot}/bin/",
        },
        {
            "name": "Debug MAGO 2",
            "type": "gdb",
            "request": "launch",
            
            "target": "${workspaceRoot}/bin/renderbatch.exe",
            "symbolSearchPath": "${workspaceRoot}/bin/",
            "cwd": "${workspaceRoot}/bin/",
